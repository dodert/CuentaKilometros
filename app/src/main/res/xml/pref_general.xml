<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_log"
        android:summary="Enable logs in the main window to see what is happening."
        android:title="Enable Log" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="keep_enable_gps_when_background"
        android:summary="Keep the gps enabled even when the app is in background."
        android:title="Keep GPS enabled when background" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_track"
        android:summary="Enable traking to kml file."
        android:title="Enable track to KML" />

    <ListPreference
        android:defaultValue="100"
        android:entries="@array/pref_meters_steps_titles"
        android:entryValues="@array/pref_meters_steps_values"
        android:key="meters_steps"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="%s"
        android:title="@string/pref_title_meters_steps" />

